{
    "version": 3,
    "configurePresets": [
        {
            "name": "phytium-pi-debug",
            "displayName": "Phytium Pi Debug Build",
            "description": "Debug build for Phytium Pi development board",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-phytium-pi",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/kernel/gcc.cmake",
                "PLATFORM": "phytium-pi",
                "AARCH64": "ON",
                "KernelSel4Arch": "aarch64",
                "SIMULATION": "OFF",
                "KernelVerificationBuild": "OFF",
                "KernelDebugBuild": "ON",
                "KernelPrinting": "ON"
            }
        },
        {
            "name": "phytium-pi-release",
            "displayName": "Phytium Pi Release Build", 
            "description": "Release build for Phytium Pi development board",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-phytium-pi-release",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/kernel/gcc.cmake",
                "PLATFORM": "phytium-pi",
                "AARCH64": "ON", 
                "KernelSel4Arch": "aarch64",
                "SIMULATION": "OFF",
                "KernelVerificationBuild": "OFF",
                "KernelDebugBuild": "OFF",
                "KernelPrinting": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "phytium-pi-debug",
            "configurePreset": "phytium-pi-debug"
        },
        {
            "name": "phytium-pi-release", 
            "configurePreset": "phytium-pi-release"
        }
    ]
}
